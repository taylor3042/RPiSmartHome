<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.annaane.mysmarthome.ProjectionActivity"
    android:background="@drawable/projectionoff"
    android:id="@+id/ProjectionLayout"
    android:theme="@style/AppTheme">>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Projection"
        android:textSize="60dp"
        android:textColor="#ffffff"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/projon"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/roundbutton_animation"
        android:drawableLeft="@drawable/projon"
        android:paddingLeft="13dp"
        android:text="ON"
        app:layout_constraintBottom_toTopOf="@+id/projoff"
        app:layout_constraintLeft_toLeftOf="@+id/projoff"
        app:layout_constraintStart_toStartOf="@+id/projoff" />

    <Button
        android:id="@+id/projoff"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/roundbutton_animation"
        android:drawableLeft="@drawable/projoff"
        android:paddingLeft="13dp"
        android:text="OFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/source"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/roundbutton_animation"
        android:onClick="IntentProjectionControl"
        android:text="Source Control"
        app:layout_constraintLeft_toLeftOf="@+id/projon"
        app:layout_constraintStart_toStartOf="@+id/projon"
        app:layout_constraintTop_toBottomOf="@+id/projoff" />
</android.support.constraint.ConstraintLayout>
